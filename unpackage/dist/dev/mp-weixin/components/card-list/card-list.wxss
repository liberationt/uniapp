  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.card.cardImgs .imageInfor {
  width: 100%;
  height: 100px;
}
.card.cardImgs .cardInfor {
  padding-left: 0;
}
.card.cardImgs .cardInfor .cardTitle {
  margin: 10px 0;
