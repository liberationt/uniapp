.card {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 10px;
  margin: 10px;
  border-radius: 5px;
  -webkit-box-shadow: 0 0 5px 1px rgba(0, 0, 0, 0.1);
          box-shadow: 0 0 5px 1px rgba(0, 0, 0, 0.1);
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.card .imageInfor {
  width: 60px;
  height: 60px;
  overflow: hidden;
  border-radius: 5px;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.card .imageInfor image {
  width: 100%;
  height: 100%;
}
.card .cardInfor {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding-left: 10px;
  width: 100%;
}
.card .cardInfor .cardTitle {
  font-size: 14px;
  font-weight: 400;
  color: #333;
  line-height: 1.2;
}
.card .cardInfor .cardTitle text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.card .cardInfor .cardBottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 12px;
}
.card .cardInfor .cardBottom .cardType {
  color: #f07373;
}
.card .cardInfor .cardBottom .cardType .labelInfor {
  border: 1px solid #f07373;
  padding: 0 10px;
  margin-right: 5px;
  border-radius: 15px;
}
.card .cardInfor .cardBottom .lookPeople {
  color: #999;
  line-heihgt: 1.5;
}
.card.cardImg .cardInfor {
  width: 100%;
  padding-left: 0;
}
.card.cardImg .cardInfor .imageInfor {
  width: 100%;
  margin: 10px 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 70px;
}
.card.cardImg .cardInfor .imageInfor .imageInforItem {
  width: 100%;
  margin-left: 10px;
  border-radius: 5px;
  overflow: hidden;
}
.card.cardImg .cardInfor .imageInfor .imageInforItem:first-child {
  margin-left: 0;
}
.card.cardImg .cardInfor .imageInfor .imageInforItem ._img {
  widht: 100%;
  height: 100%;
}
